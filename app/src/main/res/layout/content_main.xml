<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.seraticsac.drawer.MainActivity"
    tools:showIn="@layout/app_bar_main">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/tvConsolidado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:text="Preguntas: 0/3"
        android:background="@color/colorDivider"
        android:textColor="@color/colorPrimaryText"/>
</LinearLayout>
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_width="300dp"
            android:layout_height="300dp"
            card_view:cardCornerRadius="4dp"
            android:layout_centerInParent="true">
            <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:background="@color/colorDivider"
                  android:layout_gravity="center">
                  <TextView
                      android:id="@+id/tvEstado"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_centerHorizontal="true"
                      android:textSize="24sp"
                      android:text="APROBADO"
                      android:textStyle="bold"
                      android:textColor="@color/colorPrimaryText"/>
                  <ImageView
                      android:id="@+id/ivUsuario"
                      android:layout_width="24dp"
                      android:layout_height="24dp"
                      android:layout_below="@+id/tvEstado"
                      android:background="@drawable/ic_face_black_24dp"/>
                  <TextView
                      android:id="@+id/tvNombre"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_centerHorizontal="true"
                      android:text="JOSE LUIS CERÃ“N"
                      android:textSize="14sp"
                      android:textColor="@color/cardview_light_background"
                      android:layout_alignTop="@+id/ivUsuario"
                      android:layout_alignBottom="@+id/ivUsuario"
                      android:gravity="center"
                      android:layout_below="@+id/tvEstado" />
                  <ImageView
                      android:id="@+id/ivDocumento"
                      android:layout_width="24dp"
                      android:layout_height="24dp"
                      android:layout_below="@+id/ivUsuario"
                      android:background="@drawable/ic_subtitles_black_24dp"/>
                  <TextView
                      android:id="@+id/tvDocumento"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_centerHorizontal="true"
                      android:text="001342032"
                      android:textColor="@color/colorIconText"
                      android:layout_alignTop="@+id/ivDocumento"
                      android:layout_alignBottom="@+id/ivDocumento"
                      android:layout_alignLeft="@+id/tvNombre"
                      android:gravity="center"
                      android:textSize="14sp"
                      android:layout_below="@+id/tvEstado" />
              </RelativeLayout>
        </android.support.v7.widget.CardView>
</RelativeLayout>