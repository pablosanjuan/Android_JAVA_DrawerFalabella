<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey50"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.seraticsac.drawer.Aprobado1"
    tools:showIn="@layout/app_bar_main">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        app:cardCornerRadius="11dp"
        app:cardElevation="14dp"
        android:layout_margin="20dp"
        android:layout_centerInParent="true">
        <RelativeLayout
            android:padding="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/tvEstado3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textSize="24sp"
                android:text="APROBADO"
                android:textStyle="bold"
                android:layout_marginBottom="30dp"
                android:textColor="@color/colorPrimary"/>
            <ImageView
                android:id="@+id/ivUsuario"
                android:layout_marginLeft="20dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/tvEstado3"
                android:background="@mipmap/ic_person_black_24dp"/>
            <TextView
                android:id="@+id/tvNombre3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="JOSE LUIS CERÓN"
                android:textSize="14sp"
                android:textColor="@color/colorPrimaryText"
                android:layout_alignTop="@+id/ivUsuario"
                android:layout_alignBottom="@+id/ivUsuario"
                android:gravity="center"
                android:layout_below="@+id/tvEstado" />
            <ImageView
                android:id="@+id/ivDocumento"
                android:layout_below="@+id/ivUsuario"
                android:layout_marginLeft="20dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@mipmap/ic_credit_card_black_24dp"/>
            <TextView
                android:id="@+id/tvDocumento3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="001342032"
                android:textColor="@color/colorPrimaryText"
                android:layout_alignTop="@+id/ivDocumento"
                android:layout_alignBottom="@+id/ivDocumento"
                android:layout_alignLeft="@+id/tvNombre"
                android:gravity="center"
                android:textSize="14sp"
                android:layout_below="@+id/tvEstado" />

            <View
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:id="@+id/linea"
                android:layout_below="@+id/ivDocumento"
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="@color/grey500" />

            <TextView
                android:id="@+id/preg31"
                android:layout_below="@+id/linea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/ivDocumento"
                android:text="Concretó Venta?"/>

            <RadioGroup
                android:layout_marginBottom="10dp"
                android:id="@+id/rgroup"
                android:layout_below="@+id/linea"
                android:layout_toRightOf="@+id/preg31"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:text="Si"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_si" />
                <RadioButton
                    android:text="No"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_no" />
            </RadioGroup>
            <TextView
                android:id="@+id/preg32"
                android:layout_below="@+id/rgroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/ivDocumento"
                android:text="Concretó Venta?"/>

            <RadioGroup
                android:layout_marginBottom="10dp"
                android:id="@+id/rgroup2"
                android:layout_below="@+id/rgroup"
                android:layout_toRightOf="@+id/preg31"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:text="A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_a" />
                <RadioButton
                    android:text="B"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_b" />
                <RadioButton
                    android:text="C"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_c" />
            </RadioGroup>

            <Button
                android:id="@+id/aceptar3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/white"
                android:text="Aceptar"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>